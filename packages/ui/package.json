{
  "name": "@aurelio/ui",
  "version": "1.0.0",
  "private": true,
  "description": "Aurelio Design System - Shared UI Components",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.0.0",
    "lucide-react": "^0.469.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.6",
    "typescript": "^5.7.2",
    "tsup": "^8.3.5",
    "eslint": "^9.17.0"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  }
}

